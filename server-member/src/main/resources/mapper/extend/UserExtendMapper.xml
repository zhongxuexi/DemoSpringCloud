<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jess.dao.extend.UserExtendMapper">
    <sql id="where_sql">
        <where>
            1=1 and a.delete_state = '0'
            <if test="keyword!=null and keyword!=''">
                and (a.real_name like CONCAT('%',#{keyword},'%') or
                a.user_name like CONCAT('%',#{keyword},'%') or
                a.education like CONCAT('%',#{keyword},'%') or
                a.native_place like CONCAT('%',#{keyword},'%') or
                a.address like CONCAT('%',#{keyword},'%')
                )
            </if>
        </where>
    </sql>

    <select id="getAll" resultType="com.jess.entity.User" parameterType="java.lang.String">
        SELECT
        a.*
        FROM
        t_user a
        <include refid="where_sql"/>
        ORDER BY
        a.create_time desc
    </select>

    <select id="totalCount" resultType="java.lang.Integer" parameterType="java.lang.String">
        select count(1) from t_user a <include refid="where_sql"/>
    </select>


</mapper>